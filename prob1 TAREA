import matplotlib.pyplot as plt
import numpy as np 
from math import e 


x=np.linspace(-6,2)

fx=5-4*x-x**2

plt.plot(x,fx,'-', color='yellow',markersize =10 )
plt.title('amarillo es $5-4x-x^2$,\nmorado es $2x^2-8x-11$,\nazul es $xe^-2x$')

x2=np.linspace(-1,5)

fx2=2*x2**2-8*x2-11
plt.plot(x2,fx2,'-', color='purple',markersize =10 )


x3=np.linspace(-1,5)

fx3=x3*(1/e**2)*x3
plt.plot(x3,fx3,'-', color='blue',markersize =10 )

#x4=np.linspace(0,24)
#fx4=(1/e)
plt.show()
